{{!--
  Post template with full width featured image above content.
--}}

{{!< default}}

{{#post}}
<article class="{{post_class}}">
  {{#match @page.show_title_and_feature_image}}
    <div class="w-screen relative left-1/2 -translate-x-1/2 -mt-8">
      {{> "feature-image" class="h-[70vh] overflow-hidden sticky top-0" caption_class="!hidden"}}

      <div class="relative z-10 bg-0 translate-y-[1px]">
        <div class="flex flex-col justify-center gap-4 px-6 pt-12 md:px-0 max-w-[var(--post-content-max-width)] mx-auto">
          <h1 class="!text-5xl leading-[1.15]">{{title}}</h1>
          {{#if custom_excerpt}}
            <p class="opacity-80 text-lg">{{custom_excerpt}}</p>
          {{/if}}

          {{#is "post"}}
            {{> "post-meta"}}
            <hr/>
            {{> "post-share"}}
          {{/is}}
        </div>
      </div>
    </div>
  {{/match}}

  {{> "post-content" class="mt-12"}}
</article>
{{/post}}
