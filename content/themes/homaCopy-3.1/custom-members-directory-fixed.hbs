<article class="post {{post_class}}">
    <header class="post-header">
        <section class="flex flex-col justify-center mx-auto max-w-lg items-center justify-center text-center gap-4 pb-10 pt-24">
            <h1>{{title}}</h1>
        </section>
    </header>

    <!-- Search and Filters -->
    <section class="section">
        <div class="max-w-4xl mx-auto mb-8">
            <div class="members-controls-wrapper">
                <!-- Search Bar -->
                <div class="members-control-item members-search">
                    <input 
                        type="search" 
                        id="memberSearch" 
                        placeholder="Search members by name..." 
                        class="input"
                    >
                </div>
                
                <!-- Location Filter -->
                <div class="members-control-item">
                    <select id="locationFilter" class="input">
                        <option value="">All Locations</option>
                        <!-- Populated dynamically -->
                    </select>
                </div>
                
                <!-- Keyword Search -->
                <div class="members-control-item">
                    <input 
                        type="search" 
                        id="keywordSearch" 
                        placeholder="Search by keyword, business, service..." 
                        class="input"
                    >
                </div>
                
                <!-- Featured Filter -->
                <div class="members-control-item" style="display: flex; align-items: center; gap: 8px;">
                    <input type="checkbox" id="featuredFilter" style="width: 18px; height: 18px; cursor: pointer;">
                    <label for="featuredFilter" style="margin: 0; cursor: pointer; font-weight: 500;">Featured Only</label>
                </div>
                
                <!-- Sort Filter -->
                <div class="members-control-item">
                    <select id="sortFilter" class="input">
                        <option value="alphabetical">A-Z</option>
                        <option value="newest">Newest First</option>
                        <option value="featured">Featured</option>
                    </select>
                </div>
            </div>
            
            <!-- Results Info -->
            <div class="results-info">
                <span id="resultsInfo">Loading...</span>
            </div>
        </div>
    </section>

    <hr/>

    <!-- Members Grid -->
    <section class="section">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 gap-y-16" id="membersDirectoryList">
            <div class="text-center py-8 col-span-full">Loading members...</div>
        </div>
        
        <!-- Load More Button -->
        <div class="text-center mt-12">
            <button id="loadMoreBtn" class="load-more-btn" style="display: none;">
                Load More Members
            </button>
            <div id="loadingMore" class="text-gray-500" style="display: none;">
                Loading more members...
            </div>
        </div>
    </section>
</article>

