{{!--
  Featured Posts
  -------------
  Displays a grid of featured posts with custom layout.
--}}

{{#if posts}}
  <div class="grid grid-cols-1 md:grid-cols-3 grid-rows-4 gap-8 mb-8">
    <div class="col-span-1 {{#if posts.[2]}}md:col-span-2{{else}}md:col-span-3{{/if}} row-span-4 {{#if posts.[2]}}md:pr-8 md:border-r md:border-b0 {{/if}}">
      {{#posts.[0]}}
        {{> "post-card" 
          layout="column"
          titleClass="!text-h1"
          featureImageClass="!aspect-[1.75]"
          titleClass="text-h1"
        }}
      {{/posts.[0]}}

      {{#posts.[1]}}
        {{> "post-card" 
          layout="row"
          titleClass="!text-h4"
          class="pt-4 mt-4 border-t border-b0"
          featureImageClass="!h-32 !w-32 !aspect-square"
          contentClass="!flex-1"
        }}
      {{/posts.[1]}}
    </div>

    {{#if posts.[2]}}
      <div class="col-span-1 row-span-4 border-t border-b0 pt-4 md:border-t-0 md:border-0 md:pt-0">
        {{#posts.[2]}}
        {{> "post-card" 
          layout="column" 
          class="pb-4 mb-4 border-b border-b0"
          featureImageClass="!aspect-[1.8]"
          titleClass="text-h5"
        }}
      {{/posts.[2]}}
      {{#posts.[3]}}
        {{> "post-card"
          layout="column" 
          featureImageClass="!aspect-[1.8]"
          titleClass="text-h5"
          }}
        {{/posts.[3]}}
      </div>
    {{/if}}
  </div>
{{/if}}