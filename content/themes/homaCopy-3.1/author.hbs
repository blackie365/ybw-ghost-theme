{{!--
  Author profile page displaying author information and their posts.
--}}

{{!< default}}

{{#author}}
<section class="flex flex-col items-center justify-center gap-4 py-10">
  {{#if profile_image}}
    <img src="{{profile_image}}" alt="{{name}}" class="w-48 h-48 bg-1 object-cover rounded-full" />
  {{/if}}
  <h1>{{name}}</h1>

  {{#if bio}}
    <p class="text-center max-w-lg">{{bio}}</p>
  {{/if}}

  <div class="flex gap-4 items-center font-medium opacity-80">
    {{> "author-social-links" itemClass="hover:underline"}}
  </div>
</section>
{{/author}}

<hr/>

<section class="py-10">
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 gap-y-16" data-posts>
    {{#foreach posts}}
      {{> "post-card"
        layout="column"
        class="fade-in-up"
        style=(concat "animation-delay: calc(0.05s * " @index ")")
      }}
    {{/foreach}}
  </div>
  {{pagination}}
</section>