<!-- Member Spotlight Carousel for Homepage -->
<!-- Insert this near the top of home.hbs, after the main hero or before main content -->

<section class="member-spotlight-section">
    <div class="spotlight-container">
        <div class="spotlight-header">
            <h2 class="spotlight-title">Member Spotlight</h2>
            <p class="spotlight-subtitle">Celebrating our inspiring Yorkshire businesswomen</p>
        </div>
        
        <div class="spotlight-carousel">
            <div class="spotlight-slides"></div>
            
            <button class="spotlight-nav spotlight-prev" aria-label="Previous member">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="15 18 9 12 15 6"></polyline>
                </svg>
            </button>
            
            <button class="spotlight-nav spotlight-next" aria-label="Next member">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="9 18 15 12 9 6"></polyline>
                </svg>
            </button>
            
            <div class="spotlight-dots"></div>
        </div>
    </div>
</section>

