{{! custom-awards-index.hbs }}
{{!< default}}

<style>
  /* Break out of container for full-width header */
  .awards-index .full-width-header {
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
  }
</style>

<section class="awards-index">
  {{!-- Full-width header image --}}
  <div class="full-width-header -mt-8">
    <div
      class="w-full bg-cover bg-center"
      style="height: 50vh; background-image: url('{{#if page.feature_image}}{{img_url page.feature_image size="xxl"}}{{else}}https://yorkshirebusinesswoman.co.uk/content/images/size/w2000/2025/12/YBW_Awards_070325_212.jpg{{/if}}');"
    >
    </div>
  </div>
  
  {{!-- Title and description below image --}}
  <div class="max-w-[var(--post-content-max-width)] mx-auto px-6 md:px-0 py-12 md:py-16">
    <h1 class="!text-5xl leading-[1.15] mb-4">{{#if page.title}}{{page.title}}{{else}}YBW Awards{{/if}}</h1>
    {{#if page.custom_excerpt}}
      <p class="text-lg max-w-2xl opacity-80">
        {{page.custom_excerpt}}
      </p>
    {{/if}}
  </div>
  {{!-- Awards grid: 1 / 2 / 3 / 4 columns, matching Events layout --}}
  <div class="mt-16 px-6 md:px-0 max-w-[var(--post-content-max-width)] mx-auto pb-16">
    {{#if posts}}
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-x-8 gap-y-12" data-posts>
        {{#foreach posts}}
          <article class="{{post_class}}">
            {{!-- Featured image, no rounded corners or zoom to match screenshot --}}
            {{#if feature_image}}
              <a href="{{url}}" class="block mb-4">
                <img
                  src="{{feature_image}}"
                  alt="{{title}}"
                  class="w-full aspect-[3/2] object-cover"
                >
              </a>
            {{/if}}

            {{!-- Category label (like EVENTS in the screenshot) --}}
            <div class="text-xs tracking-[0.2em] uppercase mb-2 opacity-70">
              Awards
            </div>

            {{!-- Title --}}
            <h2 class="text-2xl font-semibold leading-snug mb-2">
              <a href="{{url}}" class="hover:underline">
                {{title}}
              </a>
            </h2>

            {{!-- Excerpt --}}
            {{#if custom_excerpt}}
              <p class="text-sm opacity-80 mb-3">
                {{custom_excerpt}}
              </p>
            {{/if}}

            {{!-- Meta line (date / author) --}}
            {{> "post-meta"}}
          </article>
        {{/foreach}}
      </div>

      <div class="mt-12">
        {{pagination}}
      </div>
    {{else}}
      <p class="opacity-80">
        No awards have been published yet.
      </p>
    {{/if}}
  </div>
</section>